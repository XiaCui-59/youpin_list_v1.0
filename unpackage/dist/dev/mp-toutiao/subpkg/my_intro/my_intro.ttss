.custom_header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: url("https://static.test.swiftwd.com/worker/top_header_bg.png") no-repeat;
  background-size: 100% 100%;
  overflow: hidden;
  z-index: 2;
}
.custom_header image {
  will-change: transform;
}
.custom_header > image {
  width: 100%;
}
.custom_header .title {
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  position: fixed;
  font-weight: bold;
  width: 100%;
  z-index: 10;
}
.custom_header .title .back {
  position: absolute;
  left: 40rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  width: 44rpx;
  height: 44rpx;
}
.custom_header .title .back image {
  width: 44rpx;
  height: 44rpx;
}
.inputing {
  position: fixed;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  z-index: 15;
  width: 80%;
}
.inputing image {
  width: 100%;
}
.box {
  position: fixed;
  width: calc(100% - 92rpx);
  left: 46rpx;
  z-index: 10;
  background: #fff;
  border-radius: 16rpx;
}
.box .text_area {
  height: 100%;
  padding: 40rpx;
  box-sizing: border-box;
  position: relative;
}
.box .text_area .count {
  position: absolute;
  bottom: 20rpx;
  right: 40rpx;
  font-size: 27rpx;
  color: #216FF9;
}
.box .text_area .count text {
  color: #5A5A5A;
}
.box .text_area textarea {
  width: 100%;
  height: 100%;
  font-weight: 400;
  font-size: 27rpx;
  color: #5A5A5A;
  line-height: 54rpx;
}
.btns {
  position: fixed;
  width: calc(100% - 92rpx);
  left: 46rpx;
  z-index: 10;
}
.btns .btn {
  width: 48%;
  height: 84rpx;
  line-height: 84rpx;
  text-align: center;
  background: #216FF9;
  border-radius: 15rpx;
  border: 2rpx solid #216FF9;
  font-weight: 600;
  font-size: 29rpx;
  color: #FFFFFF;
}

