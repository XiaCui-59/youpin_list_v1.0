<block s-if="{{showAddBase}}"><view class="add_base_info"><view class="inner"><view class="title">完善基本信息</view><view class="base"><view class="line flex flex-start"><view class="tit">姓名</view><view class="input_wrap"><input type="text" data-event-opts="{{[['input',[['__set_model',['','name','$event',[]]]]]]}}" value="{{name}}" bindinput="__e"/></view></view><view class="line flex flex-start"><view class="tit">性别</view><radio-group data-event-opts="{{[['change',[['genderChange',['$event']]]]]}}" class="flex flex-start" bindchange="__e"><block s-for="gender trackBy item.value" s-for-item="item" s-for-index="index"><label class="uni-list-cell uni-list-cell-pd flex flex-start" style="margin-right:80rpx;"><view><radio style="transform:scale(0.8);" value="{{item.value}}" checked="{{index===currentGender}}" color="#106afa"></radio></view><view style="font-size:27rpx;">{{item.text}}</view></label></block></radio-group></view><view class="line flex flex-start"><view class="tit">年龄</view><view class="input_wrap"><input type="number" data-event-opts="{{[['input',[['__set_model',['','age','$event',[]]]]]]}}" value="{{age}}" bindinput="__e"/></view></view></view><view class="btns flex flex_btween"><view data-event-opts="{{[['tap',[['refuse',['$event']]]]]}}" class="cancel btn" bindtap="__e">取消</view><view data-event-opts="{{[['tap',[['saveBase',['$event']]]]]}}" class="agree btn" bindtap="__e">保存</view></view></view></view></block>