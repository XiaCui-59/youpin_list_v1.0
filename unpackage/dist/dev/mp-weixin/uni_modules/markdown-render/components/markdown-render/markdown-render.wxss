.hljs {
	color: #c9d1d9;
	background: #0d1117
}
.hljs-doctag,
.hljs-keyword,
.hljs-meta .hljs-keyword,
.hljs-template-tag,
.hljs-template-variable,
.hljs-type,
.hljs-variable.language_ {
	color: #ff7b72
}
.hljs-title,
.hljs-title.class_,
.hljs-title.class_.inherited__,
.hljs-title.function_ {
	color: #d2a8ff
}
.hljs-attr,
.hljs-attribute,
.hljs-literal,
.hljs-meta,
.hljs-number,
.hljs-operator,
.hljs-selector-attr,
.hljs-selector-class,
.hljs-selector-id,
.hljs-variable {
	color: #79c0ff
}
.hljs-meta .hljs-string,
.hljs-regexp,
.hljs-string {
	color: #a5d6ff
}
.hljs-built_in,
.hljs-symbol {
	color: #ffa657
}
.hljs-code,
.hljs-comment,
.hljs-formula {
	color: #8b949e
}
.hljs-name,
.hljs-quote,
.hljs-selector-pseudo,
.hljs-selector-tag {
	color: #7ee787
}
.hljs-subst {
	color: #c9d1d9
}
.hljs-section {
	color: #1f6feb;
	font-weight: 700
}
.hljs-bullet {
	color: #f2cc60
}
.hljs-emphasis {
	color: #c9d1d9;
	font-style: italic
}
.hljs-strong {
	color: #c9d1d9;
	font-weight: 700
}
.hljs-addition {
	color: #aff5b4;
	background-color: #033a16
}
.hljs-deletion {
	color: #ffdcd7;
	background-color: #67060c
}
.rich-content  ._li,
.rich-content  ._ul {
	margin-left: 0 !important;
	padding-left: 0 !important;
	text-indent: 0 !important;
}

/* .my-custom- 开头的类名都是兼容小程序用的 */
.content {
	overflow: hidden;
	/* padding: 0 10px; */
}

/* 代码高亮样式修改 */
.rich-content  ._pre.hljs {
	padding: 5px 8px;
	margin: 5px 0;
	overflow: auto;
}

/* 表格样式修改 start */
.rich-content  ._table,
.my-custom-table {
	border-spacing: 0;
}
.rich-content  .my-custom-table .my-custom-table-th,
.rich-content  .my-custom-table .my-custom-table-td {
	border: 1px solid #666;
	padding: 3px 5px;
}
.rich-content  ._th {
	border: 1px solid #666;
	padding: 3px 5px;
}
.rich-content  ._td {
	border: 1px solid #666;
	padding: 3px 5px;
}

/* 表格样式修改 end */

/* a标签样式修改 */
.rich-content  ._a,
.my-custom-a {
	color: #1890ff;
}

/* 图片样式修改 */
.rich-content  ._img,
.my-custom-img {
	max-width: 100%;
}

/* 引用样式修改 */
.rich-content  ._blockquote,
.my-custom-blockquote {
	display: block;
	padding: 10px 5px;
	border-left: 8px solid #dddfe4;
	background-color: #eef0f4;
	overflow: auto;
	word-break: normal;
}
.cursor {
	display: none;
}
.show-cursor .cursor {
	display: inline-block;
	width: 12px;
	height: 12px;
	border-radius: 50%;
	background-color: #222;
	-webkit-animation: bibibili 1s infinite;
	        animation: bibibili 1s infinite;
}

/* 闪烁 */
@-webkit-keyframes bibibili {
from {
		opacity: 1;
}
to {
		opacity: 0;
}
}
@keyframes bibibili {
from {
		opacity: 1;
}
to {
		opacity: 0;
}
}



