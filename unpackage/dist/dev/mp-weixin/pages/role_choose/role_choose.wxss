.role_choose {
  height: 100vh;
  background: url("https://static.test.swiftwd.com/worker/new/welcome_bg.png") no-repeat;
  background-size: cover;
  color: #010101;
}
.role_choose .cont {
  position: fixed;
  left: 0;
  width: 100%;
  overflow-y: scroll;
}
.role_choose .cont .bottom {
  position: fixed;
  bottom: 88rpx;
  width: 70%;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  font-weight: 400;
  font-size: 23rpx;
  color: #333333;
  line-height: 44rpx;
  text-align: center;
}
.role_choose .cont .middle {
  margin-top: 50%;
  position: relative;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  padding: 0 42rpx;
}
.role_choose .cont .middle .mid_item {
  background: linear-gradient(90deg, #FFFFFF 0%, #EAF7FF 100%);
  box-shadow: 0rpx 4rpx 6rpx 0rpx rgba(107, 107, 107, 0.13);
  border-radius: 31rpx;
  padding: 34rpx 38rpx;
}
.role_choose .cont .middle .mid_item .btn_wrap {
  position: relative;
}
.role_choose .cont .middle .mid_item .btn_wrap .label {
  position: absolute;
  top: -30rpx;
  left: 0;
  padding: 0 20rpx;
  height: 38rpx;
  line-height: 38rpx;
  background: #FF2C00;
  box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(0, 0, 0, 0.26);
  border-radius: 19rpx 19rpx 0rpx 19rpx;
  font-weight: 400;
  font-size: 23rpx;
  color: #FFFFFF;
}
.role_choose .cont .middle .mid_item:first-child {
  margin-bottom: 57rpx;
}
.role_choose .cont .middle .mid_item image {
  width: 257rpx;
}
.role_choose .cont .middle .mid_item .btn {
  width: 258rpx;
  height: 85rpx;
  text-align: center;
  line-height: 85rpx;
  background: #F7BC05;
  box-shadow: 0rpx 2rpx 4rpx 0rpx rgba(0, 0, 0, 0.15);
  border-radius: 42rpx;
  font-weight: 600;
  font-size: 35rpx;
  color: #FFFFFF;
}
.role_choose .cont .middle .mid_item .btn.blue {
  background: #106afa;
}
.role_choose .cont .top {
  padding-left: 23rpx;
  padding-top: 90rpx;
}
.role_choose .cont .top .title {
  font-weight: 600;
  font-size: 54rpx;
  color: #333333;
  line-height: 77rpx;
  margin-bottom: 12rpx;
}
.role_choose .cont .top .tip {
  font-weight: 400;
  font-size: 29rpx;
  color: #333333;
  line-height: 40rpx;
}
