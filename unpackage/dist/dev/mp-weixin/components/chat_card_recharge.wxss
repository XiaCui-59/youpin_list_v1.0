.card_recharge {
  margin-top: 30rpx;
  background: url("https://static.test.swiftwd.com/worker/new/card_ic_bg.png") no-repeat;
  background-size: 100% 100%;
}
.card_recharge .top {
  padding: 20rpx 20rpx 0 70rpx;
}
.card_recharge .top .top_left .tit {
  font-size: 38rpx;
  color: #FFFFFF;
  text-shadow: 0px 1px 2px rgba(32, 32, 32, 0.8);
  margin-bottom: 6rpx;
  font-family: "也字工厂";
}
.card_recharge .top .top_left .text {
  font-weight: 400;
  font-size: 23rpx;
  color: #333333;
}
.card_recharge .top image {
  width: 120rpx;
}
.card_recharge .bot_wrap {
  padding: 0 30rpx 30rpx 30rpx;
  margin-top: 10rpx;
}
.card_recharge .bot {
  background: #FFFFFF;
  border-radius: 15rpx;
  padding: 30rpx 25rpx 23rpx 25rpx;
}
.card_recharge .bot .left {
  width: 165rpx;
  padding: 6rpx 15rpx 6rpx 10rpx;
  background: rgba(239, 197, 98, 0.3);
  border-radius: 12rpx;
  margin-right: 10rpx;
  white-space: nowrap;
  flex-shrink: 0;
  box-sizing: border-box;
}
.card_recharge .bot .left .text {
  font-weight: 600;
  font-size: 23rpx;
  color: #AA691B;
}
.card_recharge .bot .left image {
  width: 50rpx;
  margin-right: 6rpx;
}
.card_recharge .bot .name {
  width: calc(100% - 175rpx);
  font-weight: 600;
  font-size: 31rpx;
  color: #020202;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.card_recharge .bot .sure_btn {
  height: 81rpx;
  background: #EFC562;
  box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(104, 78, 0, 0.5);
  border-radius: 15rpx;
  font-weight: 600;
  font-size: 29rpx;
  color: #282319;
  line-height: 81rpx;
  text-align: center;
  margin-top: 25rpx;
}
