.inner {
  width: calc(100% - 92rpx) !important;
  color: #333;
  padding: 30rpx 38rpx 76rpx 38rpx !important;
  background: linear-gradient(180deg, #FCD1A8 0%, #FFF9F0 20%) !important;
  border-radius: 37rpx;
}
.inner .bg_ic {
  font-size: 0;
  position: absolute;
  top: 0;
  right: 0;
  z-index: 99;
}
.inner .bg_ic image {
  width: 250rpx;
}
.inner .title {
  position: relative;
  z-index: 1000;
  font-weight: 600;
  font-size: 38rpx;
  color: #282319;
  line-height: 54rpx;
  margin-bottom: 55rpx;
  padding-left: 38rpx;
}
.inner .box {
  position: relative;
  z-index: 1000;
}
.inner .box .line {
  height: 85rpx;
  line-height: 85rpx;
  margin: 20rpx 0;
  font-size: 29rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 2rpx 6rpx 0rpx rgba(0, 0, 0, 0.1);
  border-radius: 8rpx;
  padding: 0 38rpx 0 23rpx;
}
.inner .box .line .line_text {
  width: calc(100% - 50rpx);
  color: #666;
}
.inner .box .line .line_text input {
  width: 100%;
  height: 85rpx;
}
.inner .box .tips {
  font-size: 24rpx;
}
.inner .box .tips .tips_item {
  margin-top: 10rpx;
  align-items: flex-start;
}
.inner .box .tips .tips_item .tips_tit {
  white-space: nowrap;
}
.inner .box .tips .tips_item .tips_text {
  font-size: 23rpx;
  color: #DD0000;
}
.inner .box .btn_y {
  position: relative;
  top: 0;
  bottom: 0;
  left: 0;
  margin-top: 38rpx;
  height: 76rpx;
  line-height: 76rpx;
  width: 100%;
}
.inner .box .btn_y text {
  font-weight: 400;
  font-size: 23rpx;
}
