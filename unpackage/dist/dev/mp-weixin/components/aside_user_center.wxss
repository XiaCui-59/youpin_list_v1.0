 .u-tabs__wrapper__nav__line {
  bottom: 0 !important;
}
 .u-avatar {
  margin: 0 auto;
}
 .inner .u-navbar--fixed {
  width: 83vw;
}
 .u-cell-group {
  padding: 0 28rpx;
}
 .u-cell__body--large {
  background: #F7F8FA;
  border-radius: 25rpx;
  margin-bottom: 20rpx;
}
 .u-cell__value--large {
  font-weight: 900;
  font-size: 38rpx !important;
  color: #755022 !important;
}
 .u-cell:nth-child(2) .u-cell__value--large {
  font-weight: 400 !important;
  font-size: 27rpx !important;
  color: #755022 !important;
  height: 58rpx;
  line-height: 58rpx;
}
.want_to_release {
  bottom: 145rpx;
}
.want_to_release image {
  width: 32rpx;
  margin-left: 8rpx;
}
.inner {
  width: 83vw;
  box-sizing: border-box;
  background: #fff;
  color: #4C4C53;
  height: 100%;
}
.user_base_out {
  position: relative;
  padding: 0 28rpx 40rpx 28rpx;
  margin-bottom: 38rpx;
  background: url("https://static.test.swiftwd.com/worker/new/my_info_cover.png") no-repeat;
  background-size: cover;
  background-position: center center;
}
.user_base {
  background-size: 100% 100%;
  box-sizing: border-box;
  border-radius: 25rpx;
  overflow: hidden;
}
.user_base .tips {
  margin-top: 20rpx;
  background: rgba(255, 255, 255, 0.15);
}
.user_base .tips image {
  width: 200rpx;
}
.user_base .tips .tip {
  width: calc(100% - 200rpx);
  font-weight: 400;
  font-size: 23rpx;
  color: #282319;
  text-align: center;
}
.user_base > image {
  width: 100%;
}
.user_base .user_box .user {
  margin-top: 10rpx;
}
.user_base .user_box .user > image {
  width: 120rpx;
  border-radius: 50%;
  margin-right: 28rpx;
}
.user_base .user_box .user .user_base_info {
  width: calc(100% - 148rpx);
}
.user_base .user_box .user .user_base_info .line {
  margin-bottom: 20rpx;
}
.user_base .user_box .user .user_base_info .line:last-child {
  margin-bottom: 0;
}
.user_base .user_box .user .user_base_info .line .edit {
  font-weight: 400;
  font-size: 27rpx;
  color: #FFFFFF;
}
.user_base .user_box .user .user_base_info .line .text {
  font-weight: 400;
  font-size: 31rpx;
  color: #333333;
  margin-right: 20rpx;
}
.user_base .user_box .user .user_base_info .line .gender {
  width: 62rpx;
  height: 35rpx;
  background: rgba(33, 111, 249, 0.09);
  border-radius: 8rpx;
  border: 2rpx solid #216FF9;
  font-size: 27rpx;
  color: #216FF9;
  line-height: 35rpx;
  text-align: center;
  margin-right: 16rpx;
}
.user_base .user_box .user .user_base_info .line .name {
  font-weight: 600;
  font-size: 31rpx;
  color: #333333;
}
