.edit {
  height: 100vh;
  background: #fff;
  color: #010101;
}
.edit .cont {
  background: #F3F3F5;
  padding: 38rpx 26rpx;
  box-sizing: border-box;
}
.edit .cont .btn {
  text-align: center;
  height: 85rpx;
  background: #216FF9;
  box-shadow: 0rpx 2rpx 4rpx 0rpx rgba(0, 0, 0, 0.15);
  border-radius: 15rpx;
  color: #fff;
  font-weight: 600;
  font-size: 29rpx;
  line-height: 85rpx;
  margin-top: 57rpx;
}
.edit .cont .info {
  background: #FFFFFF;
  box-shadow: 0rpx 2rpx 6rpx 0rpx rgba(0, 0, 0, 0.15);
  padding: 2rpx 40rpx 40rpx 40rpx;
  box-sizing: border-box;
  border-radius: 28rpx;
  position: relative;
}
.edit .cont .info .line {
  margin-top: 38rpx;
}
.edit .cont .info .line:last-child .input_wrap {
  padding: 0 20rpx;
}
.edit .cont .info .line .input_wrap {
  width: 100%;
  height: 85rpx;
  background: #F9F9F9;
  border-radius: 8rpx;
  padding: 0 0 0 20rpx;
  box-sizing: border-box;
  border-bottom: none;
  position: relative;
}
.edit .cont .info .line .input_wrap .mark {
  position: absolute;
  top: 50%;
  right: 20rpx;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  font-size: 24rpx;
  color: #999;
}
.edit .cont .info .line .input_wrap button {
  width: 100%;
  height: 85rpx;
  line-height: 85rpx;
  border: none;
  font-size: 14px;
  text-align: left;
  color: #999;
  margin-left: 0;
  border-radius: 0;
  background-color: transparent;
  padding-left: 0;
  padding-right: 0;
}
.edit .cont .info .line .input_wrap button::after {
  display: none;
}
.edit .cont .info .line .input_wrap input {
  width: calc(100% - 40rpx);
  height: 100%;
  font-size: 27rpx;
}
.edit .cont .info .line .input_wrap .focus:focus {
  border: 2rpx solid #F7BC05;
}
.edit .cont .info .line .input_wrap .image_box {
  height: 85rpx;
  flex-shrink: 0;
  font-size: 0;
  padding: 0 20rpx;
}
.edit .cont .info .line .input_wrap .image_box image {
  width: 40rpx;
  margin-top: 22rpx;
}
