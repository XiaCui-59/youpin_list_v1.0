.view_record {
  height: 100vh;
  background: #fff;
  color: #010101;
  overflow: scroll;
}
.view_record .cont {
  background: #F7F8FA;
  padding: 38rpx 26rpx;
  box-sizing: border-box;
}
.view_record .cont .item {
  padding: 40rpx 48rpx 23rpx 40rpx;
  border-radius: 16rpx;
  background: #fff;
  box-shadow: 0 2rpx 6rpx 0 rgba(0, 0, 0, 0.15);
  margin-bottom: 24rpx;
  position: relative;
}
.view_record .cont .item .status {
  position: absolute;
  top: 0;
  right: 0;
  font-size: 0;
}
.view_record .cont .item .status image {
  width: 96rpx;
}
.view_record .cont .item .title {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  padding-left: 22rpx;
  box-sizing: border-box;
  position: relative;
  font-weight: 600;
  font-size: 33rpx;
  color: #333333;
}
.view_record .cont .item .title.grey {
  color: #686868;
}
.view_record .cont .item .title.grey .time {
  color: #CBCBCB;
}
.view_record .cont .item .title.grey:before {
  background: #CBCBCB;
}
.view_record .cont .item .title .text {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  box-sizing: border-box;
  width: calc(100% - 170rpx);
}
.view_record .cont .item .title .time {
  width: 160rpx;
  font-weight: 400;
  font-size: 27rpx;
  color: #5A5A5A;
  text-align: right;
}
.view_record .cont .item .title:before {
  content: "";
  width: 8rpx;
  height: 36rpx;
  background: #F7BC05;
  position: absolute;
  top: 50%;
  left: 0;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.view_record .cont .item .middle {
  font-size: 30rpx;
  margin: 20rpx 0 0 0;
  padding: 17rpx 20rpx;
  box-sizing: border-box;
  background: #F6F6F6;
  border-radius: 8rpx;
}
.view_record .cont .item .middle .mid_in_item:last-child {
  padding-bottom: 6rpx;
  font-weight: 600;
  font-size: 27rpx;
  color: #2675F5;
  border-bottom: 2rpx dashed #2675F5;
}
.view_record .cont .item .middle .mid_in_item .tit {
  font-size: 25rpx;
  color: #5A5A5A;
  line-height: 46rpx;
  font-weight: 400;
}
.view_record .cont .item .middle .mid_in_item view {
  font-weight: 600;
  font-size: 35rpx;
}
.view_record .cont .item .middle .mid_in_item .salary {
  color: #EA9900;
}
.view_record .cont .item .middle .mid_in_item .salary.grey {
  color: #686868;
}
.view_record .cont .item .middle .mid_in_item .count {
  color: #3780FF;
  text-align: right;
}
.view_record .cont .item .middle .mid_in_item .period {
  font-size: 23rpx;
  color: #A8A8A8;
  display: inline-block;
  margin-left: 10rpx;
  font-weight: 400;
}
.view_record .cont .item .bottom {
  margin-top: 16rpx;
  font-weight: 400;
  font-size: 23rpx;
  color: #5A5A5A;
  box-sizing: border-box;
}
.view_record .cont .item .bottom .location {
  width: 60%;
}
.view_record .cont .item .bottom .location image {
  width: 26rpx;
  margin-right: 10rpx;
}
.view_record .cont .item .bottom .location view {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.view_record .cont .item .bottom .time {
  margin-left: 20rpx;
  flex-shrink: 0;
  white-space: nowrap;
}
