<view class="content"><view class="box" style="{{'top:'+(marginTop+tabMargin+'px')+';'}}"><scroll-view style="{{'height:'+(scrollHeight+'px')+';'}}" scroll-y="true"><view class="text_area"><textarea placeholder="请输入自我介绍,限300字" maxlength="300" data-event-opts="{{[['input',[['__set_model',['','content','$event',[]]]]]]}}" value="{{content}}" bindinput="__e"></textarea><view class="count">{{content.length+''}}<text>/300</text></view></view></scroll-view></view><view class="btns flex flex_btween" style="{{'bottom:'+(2*tabMargin+'px')+';'}}"><block tt:if="{{content.length}}"><view data-event-opts="{{[['tap',[['save',['$event']]]]]}}" class="btn save" style="{{'width:'+(showRecord||showSetting?'48%':'100%')+';'}}" bindtap="__e">保存</view></block><block tt:if="{{showRecord}}"><view data-event-opts="{{[['touchstart',[['startRecord',['$event']]]],['touchend',[['stopRecord',['$event']]]]]}}" class="btn in_put" style="{{'width:'+(content.length?'48%':'100%')+';'}}" bindtouchstart="__e" bindtouchend="__e">{{(content.length?"继续长按录入":"长按语音录入")+''}}</view></block><block tt:if="{{showSetting}}"><view data-event-opts="{{[['tap',[['openSetting',['$event']]]]]}}" class="btn in_put" style="{{'width:'+(content.length?'48%':'100%')+';'}}" bindtap="__e">开启语音录入权限</view></block></view><block tt:if="{{showInputing}}"><view class="inputing"><image src="{{imgUrl+'/worker/inputing.gif'}}" mode="widthFix"></image></view></block></view>